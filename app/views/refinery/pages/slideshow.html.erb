<section id="slideshow">
  <div class="container">
    <div class="row">
      <div class="col-md-12">

        <div id="hulse-carousel" class="carousel slide" data-ride="carousel">
          <!-- Indicators -->
          <ol class="carousel-indicators">
            <li data-target="#hulse-carousel" data-slide-to="0" class="active"></li>
            <li data-target="#hulse-carousel" data-slide-to="1"></li>
            <li data-target="#hulse-carousel" data-slide-to="2"></li>
            <li data-target="#hulse-carousel" data-slide-to="3"></li>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <div class="item active">
              <%= image_tag 'teeth-bleaching.jpg', alt: 'Teeth Bleaching', title: 'Teeth Bleaching', class: 'img-responsive' %>
              <div class="carousel-caption">
                Bleaching
              </div>
            </div>
            <div class="item">
              <%= image_tag 'teeth-bonding.jpg', alt: 'Teeth Bonding', title: 'Teeth Bonding', class: 'img-responsive' %>
              <div class="carousel-caption">
                Bonding
              </div>
            </div>
            <div class="item">
              <%= image_tag 'teeth-porcelain-crowns.jpg', alt: 'Teeth Porcelain Crowns', title: 'Teeth Porcelain Crowns', class: 'img-responsive' %>
              <div class="carousel-caption">
                Porcelain Crowns
              </div>
            </div>
            <div class="item">
              <%= image_tag 'teeth-veneers.jpg', alt: 'Teeth Veneers', title: 'Teeth Veneers', class: 'img-responsive' %>
              <div class="carousel-caption">
                Veneers
              </div>
            </div>



          </div>

          <!-- Controls left carousel-control-->
          <a class="carousel-control" href="#hulse-carousel" role="button" data-slide="prev" style="border:none !important;">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#hulse-carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>


      </div>
    </div>
  </div>
</section>