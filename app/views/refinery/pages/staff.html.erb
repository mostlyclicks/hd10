<section id="slideshow">
  <div class="container">
    <div class="row">
      <div class="col-md-12" >

        <div id="hulse-carousel" class="carousel slide" data-ride="carousel" >

            <!-- Indicators -->
          <ol class="carousel-indicators" >
            <% @page.images.each_with_index do |image, index| %>
            <li data-target="#hulse-carousel" data-slide-to="<%= index %>" class="<% if index == 0 %>active<% end %>"></li>
            
            <% end %>
          </ol>

          <!-- Wrapper for slides -->

          <div class="carousel-inner" role="listbox" id="staff-carousel">
              <% @page.images.each_with_index do |image, index| %>
                  <div class="item <% if index == 0 %>active<% end %>">
                    <div id="staff-name" class="col-xs-5 col-xs-offset-1 col-md-4 col-md-offset-2">
                      <%= raw @page.caption_for_image_index(index) %>
                    </div>
                    <div class="col-xs-6 col-md-4">
                      <%= image_tag image.url, class: 'img-responsive' %>
                    </div>
                  </div>
              <% end %>
          </div>

          <!-- Controls left carousel-control-->
          <a class="carousel-control" href="#hulse-carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#hulse-carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>

          
        </div>
      </div>
    </div>
  </div>
</section>