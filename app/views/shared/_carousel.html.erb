          <!-- Indicators -->
          <ol class="carousel-indicators">
            <% @page.images.each_with_index do |image, index| %>
            <li data-target="#hulse-carousel" data-slide-to="<%= index %>" class="<% if index == 0 %>active<% end %>"></li>
            
            <% end %>
          </ol>

          <!-- Wrapper for slides -->
          <div class="carousel-inner" role="listbox">
            <% @page.images.each_with_index do |image, index| %>
              <div class="item <% if index == 0 %>active<% end %>">
                <%= image_tag image.url, class: 'img-responsive' %>
                <div class="carousel-caption"><%= raw @page.caption_for_image_index(index) %></div>
              </div>
            <% end %>
          </div>

          <!-- Controls left carousel-control-->
          <a class="carousel-control" href="#hulse-carousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#hulse-carousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>